{
    "manifest_version": 3,
    "name": "Crumbs alfa",
    "version": "0.0.1",
    "permissions": [
        "clipboardWrite",
        "notifications",
        "storage",
        "https://*/*",
        "http://*/*",
        "activeTab",
        "alarms",
        "clipboardWrite",
        "notifications",
        "tabs",
        "scripting",
        "webNavigation",
        "storage",
        "webRequest",
        "browserAction"
    ],
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/Content.tsx"
            ]
        }
    ]
}